@model WebMvc.Models.EventItem


<form asp-controller="Cart" asp-action="AddToCart">
    <img class="esh-catalog-thumbnail" src="@Model.PictureUrl" />
    <input class="esh-catalog-button" type="submit" value="[ ADD TO CART ]" />
    <div class="esh-catalog-name">
        <span>@Model.Title</span>
    </div>
    <div class="esh-catalog-price">
        <span>@Model.Price</span>
    </div>
    <div class="esh-catalog-label">
        <span>
            <label>Available Seats: @Model.TicketQuantity</label>
        </span>
    </div>
    <input type="hidden" asp-for="@Model.EventCategoryId" name="typeId" />
    <input type="hidden" asp-for="@Model.EventCategory" name="type" />
    <input type="hidden" asp-for="@Model.Description" name="description" />
    <input type="hidden" asp-for="@Model.Id" name="id" />
    <input type="hidden" asp-for="@Model.Title" name="title" />
    <input type="hidden" asp-for="@Model.PictureUrl" name="pictureUrl" />
    <input type="hidden" asp-for="@Model.Price" name="price" />
</form>